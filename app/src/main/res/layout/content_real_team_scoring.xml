<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RealTeamScoring"
    tools:showIn="@layout/activity_real_team_scoring">

    <CheckBox
        android:id="@+id/cargoRocketCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:text="Cargo in the rocketship?"
        app:layout_constraintBottom_toTopOf="@+id/hatchShipCB"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/hatchShipCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="14dp"
        android:text="Hatch on cargo ship?"
        app:layout_constraintBottom_toTopOf="@+id/hatchRocketCB"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cargoShipCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cargo in the cargo ship?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <CheckBox
        android:id="@+id/hatchRocketCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="176dp"
        android:text="Hatch in rocketship?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/climbYesCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <CheckBox
        android:id="@+id/climbNoCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="No"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="Can they climb?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hatchRocketCB" />

    <CheckBox
        android:id="@+id/platformTwoCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Platform 2"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/platformOneCB"
        app:layout_constraintTop_toBottomOf="@+id/platformOneCB" />

    <CheckBox
        android:id="@+id/platformThreeCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Platform 3"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/platformTwoCB"
        app:layout_constraintTop_toBottomOf="@+id/platformTwoCB" />

    <CheckBox
        android:id="@+id/platformOneCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="Platform 1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/climbNoCB"
        app:layout_constraintTop_toBottomOf="@+id/climbNoCB" />

    <CheckBox
        android:id="@+id/speedSlowCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:text="Slow"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/speedFastCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Fast"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/speedMediumCB"
        app:layout_constraintStart_toEndOf="@+id/platformThreeCB" />

    <CheckBox
        android:id="@+id/drivingCoordinateCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:text="Coordinate"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <CheckBox
        android:id="@+id/drivingPushyCB"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="64dp"
        android:text="Pushy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedFastCB" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="159dp"
        android:layout_marginBottom="160dp"
        android:text="Speed"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/climbYesCB" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="64dp"
        android:text="Driving Style"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speedSlowCB" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="3dp"
        android:onClick="startSubmitActivity"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/speedFastCB"
        app:layout_constraintStart_toStartOf="@+id/climbNoCB" />

    <CheckBox
        android:id="@+id/speedMediumCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="Medium"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/speedSlowCB"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/cargoShipCB"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>